<%= form_for(@article) do |f| %>

  <ul>
  <% @article.errors.full_messages.each do |error| %> 
    <li><%= error %></li>

  <% end %>
  </ul>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %> <!-- creates multi line etxt area-->
  </p>

  <p>
    <%= f.submit %> <!-- button-->
  </p>

<% end %>